<!-- Widget chatbot flottant pour primes-services.ia -->
<div 
  id="floating-chatbot" 
  data-controller="floating-chatbot"
  class="fixed bottom-6 right-6 z-40"
  style="display: none;"
>
  <!-- Bouton principal du chatbot -->
  <div 
    data-floating-chatbot-target="button"
    data-action="click->floating-chatbot#toggle"
    class="w-16 h-16 bg-gradient-to-br from-blue-500 to-green-500 rounded-full shadow-lg cursor-pointer flex items-center justify-center hover:scale-110 transition-transform duration-200 group"
  >
    <span class="text-white text-2xl group-hover:animate-bounce">🤖</span>
    
    <!-- Badge de notification (optionnel) -->
    <div 
      data-floating-chatbot-target="badge"
      class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 rounded-full flex items-center justify-center text-white text-xs font-bold"
      style="display: none;"
    >
      1
    </div>
  </div>

  <!-- Mini fenêtre de chat -->
  <div 
    data-floating-chatbot-target="window"
    class="absolute bottom-20 right-0 w-80 h-96 bg-white rounded-lg shadow-2xl border border-gray-200 flex flex-col hidden transform transition-all duration-300 scale-95 opacity-0"
  >
    <!-- Header de la fenêtre -->
    <div class="bg-gradient-to-r from-blue-500 to-green-500 text-white p-4 rounded-t-lg flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
          <span class="text-sm">🤖</span>
        </div>
        <div>
          <h3 class="font-semibold text-sm">Assistant Primes Services</h3>
          <p class="text-xs text-blue-100">En ligne • Répond instantanément</p>
        </div>
      </div>
      
      <div class="flex space-x-2">
        <!-- Bouton agrandir -->
        <%= link_to ai_chat_path, 
            target: "_blank",
            class: "w-6 h-6 bg-white/20 rounded hover:bg-white/30 transition-colors flex items-center justify-center",
            title: "Ouvrir en plein écran" do %>
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 11-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zM16 4a1 1 0 00-1-1h-4a1 1 0 000 2h1.586l-2.293 2.293a1 1 0 001.414 1.414L14 6.414V8a1 1 0 002 0V4z"></path>
          </svg>
        <% end %>
        
        <!-- Bouton fermer -->
        <button 
          data-action="click->floating-chatbot#close"
          class="w-6 h-6 bg-white/20 rounded hover:bg-white/30 transition-colors flex items-center justify-center"
          title="Fermer"
        >
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Zone de messages -->
    <div 
      data-floating-chatbot-target="messages"
      class="flex-1 overflow-y-auto p-4 space-y-3"
    >
      <!-- Message de bienvenue -->
      <div class="flex justify-start">
        <div class="bg-gray-100 rounded-lg px-3 py-2 max-w-xs text-sm">
          <div class="flex items-start space-x-2">
            <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
              <span class="text-white text-xs">🤖</span>
            </div>
            <div>
              <p>Bonjour ! Je suis votre assistant spécialisé en <strong>primes belges</strong>.</p>
              <p class="mt-2">Comment puis-je vous aider aujourd'hui ?</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Suggestions rapides -->
      <div class="flex flex-wrap gap-2">
        <button 
          data-action="click->floating-chatbot#sendSuggestion"
          data-message="Combien pour isoler ma maison ?"
          class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xs px-2 py-1 rounded-full transition-colors"
        >
          💰 Primes isolation
        </button>
        <button 
          data-action="click->floating-chatbot#sendSuggestion"
          data-message="Aides pour pompe à chaleur ?"
          class="bg-green-100 hover:bg-green-200 text-green-800 text-xs px-2 py-1 rounded-full transition-colors"
        >
          🔥 Chauffage
        </button>
        <button 
          data-action="click->floating-chatbot#sendSuggestion"
          data-message="Subsides pour entreprises ?"
          class="bg-purple-100 hover:bg-purple-200 text-purple-800 text-xs px-2 py-1 rounded-full transition-colors"
        >
          🏢 Entreprises
        </button>
      </div>
    </div>

    <!-- Zone de saisie -->
    <div class="border-t border-gray-200 p-3">
      <div class="flex space-x-2">
        <input
          data-floating-chatbot-target="input"
          type="text"
          placeholder="Tapez votre question..."
          class="flex-1 border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
        <button
          data-floating-chatbot-target="sendButton"
          data-action="click->floating-chatbot#sendMessage"
          class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded-lg transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.429a1 1 0 001.17-1.409l-7-14z"></path>
          </svg>
        </button>
      </div>
      
      <p class="text-xs text-gray-500 mt-2 text-center">
        Ou <%= link_to "ouvrir en plein écran", ai_chat_path, target: "_blank", class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  </div>

  <!-- Bulle d'introduction (apparaît au premier chargement) -->
  <div 
    data-floating-chatbot-target="intro"
    class="absolute bottom-20 right-2 bg-white rounded-lg shadow-lg border border-gray-200 p-3 max-w-xs"
    style="display: none;"
  >
    <div class="flex items-start space-x-2">
      <div class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0">
        <span class="text-white text-xs">💡</span>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-900">Besoin d'aide avec vos primes ?</p>
        <p class="text-xs text-gray-600 mt-1">Notre IA connaît les 324 subsides belges !</p>
        <button 
          data-action="click->floating-chatbot#dismissIntro"
          class="text-xs text-blue-600 hover:underline mt-1"
        >
          Cliquez pour discuter →
        </button>
      </div>
    </div>
    
    <!-- Flèche pointant vers le bouton -->
    <div class="absolute -bottom-1 right-6 w-3 h-3 bg-white border-r border-b border-gray-200 transform rotate-45"></div>
  </div>
</div>

<!-- Script d'affichage conditionnel -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const floatingChatbot = document.getElementById('floating-chatbot');
    const currentPath = window.location.pathname;
    
    // Afficher le widget sauf sur la page de chat complète
    if (currentPath !== '/ai/chat') {
      floatingChatbot.style.display = 'block';
      
      // Afficher la bulle d'intro après 3 secondes (première visite)
      const hasSeenIntro = localStorage.getItem('ps_chatbot_intro_seen');
      if (!hasSeenIntro) {
        setTimeout(() => {
          const intro = floatingChatbot.querySelector('[data-floating-chatbot-target="intro"]');
          if (intro) {
            intro.style.display = 'block';
          }
        }, 3000);
      }
    }
  });
</script>