<% content_for :title, "Mode hors ligne" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center px-4"
     data-controller="offline"
     data-offline-enable-auto-sync-value="true">

  <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8 text-center">
    <!-- Icône offline -->
    <div class="mx-auto w-20 h-20 bg-yellow-100 rounded-full flex items-center justify-center mb-6">
      <svg class="w-10 h-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
      </svg>
    </div>

    <!-- Titre et message principal -->
    <h1 class="text-2xl font-bold text-gray-900 mb-4">
      Mode hors ligne
    </h1>

    <p class="text-gray-600 mb-6">
      Vous n'êtes pas connecté à Internet, mais vous pouvez toujours consulter certaines informations et remplir des formulaires.
    </p>

    <!-- Statut de connexion -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-800" data-offline-target="status">
            Connexion en cours de vérification...
          </p>
        </div>
      </div>
    </div>

    <!-- Queue des soumissions offline -->
    <div data-offline-target="offlineQueue" class="hidden bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <span class="text-sm text-blue-800">Données en attente de synchronisation</span>
        </div>
        <button data-action="click->offline#manualSync"
                class="text-blue-600 hover:text-blue-800 text-sm font-medium">
          Synchroniser
        </button>
      </div>
    </div>

    <!-- Actions disponibles -->
    <div class="space-y-4 mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">
        Fonctionnalités disponibles hors ligne
      </h2>

      <div class="grid grid-cols-1 gap-3">
        <!-- Formulaires de contact -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="font-medium text-gray-900 mb-2">Formulaires de contact</h3>
          <p class="text-sm text-gray-600 mb-3">
            Remplissez vos demandes, elles seront envoyées dès la reconnexion.
          </p>
          <div class="grid grid-cols-2 gap-2">
            <%= link_to "Particuliers", contacts_particulier_path,
                class: "text-xs bg-blue-100 text-blue-800 px-3 py-2 rounded text-center hover:bg-blue-200" %>
            <%= link_to "ACP", contacts_acp_path,
                class: "text-xs bg-green-100 text-green-800 px-3 py-2 rounded text-center hover:bg-green-200" %>
            <%= link_to "Entreprises Immo", contacts_entreprise_immo_path,
                class: "text-xs bg-purple-100 text-purple-800 px-3 py-2 rounded text-center hover:bg-purple-200" %>
            <%= link_to "Entreprises Comm", contacts_entreprise_comm_path,
                class: "text-xs bg-orange-100 text-orange-800 px-3 py-2 rounded text-center hover:bg-orange-200" %>
          </div>
        </div>

        <!-- Informations des primes -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="font-medium text-gray-900 mb-2">Informations de base</h3>
          <p class="text-sm text-gray-600 mb-3">
            Consultez les informations essentielles sur les primes.
          </p>
          <div class="text-left">
            <div class="text-xs space-y-1">
              <div class="flex justify-between">
                <span class="text-gray-600">Isolation (Wallonie):</span>
                <span class="font-medium">1 000 - 6 000 €</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Chauffage (Wallonie):</span>
                <span class="font-medium">500 - 4 000 €</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Photovoltaïque (Wallonie):</span>
                <span class="font-medium">2 500 - 15 000 €</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="space-y-3">
      <button data-action="click->offline#manualSync"
              class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
        <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Vérifier la connexion
      </button>

      <%= link_to "Retour à l'accueil", root_path,
          class: "block w-full bg-gray-100 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors text-center" %>

      <button data-action="click->offline#clearOfflineQueue"
              class="w-full text-red-600 hover:text-red-800 text-sm">
        Supprimer les données en attente
      </button>
    </div>

    <!-- Informations techniques -->
    <div class="mt-8 pt-6 border-t border-gray-200">
      <details class="text-left">
        <summary class="cursor-pointer text-sm text-gray-500 hover:text-gray-700">
          Informations techniques
        </summary>
        <div class="mt-3 text-xs text-gray-500 space-y-1">
          <div>Service Worker: <span id="sw-status" class="font-mono">Vérification...</span></div>
          <div>Cache: <span id="cache-status" class="font-mono">Vérification...</span></div>
          <div>Dernière synchronisation: <span id="last-sync" class="font-mono">-</span></div>
        </div>
      </details>
    </div>
  </div>
</div>

<script>
// Vérifications techniques pour la page offline
document.addEventListener('DOMContentLoaded', function() {
  // Vérifier le Service Worker
  if ('serviceWorker' in navigator) {
    navigator.serviceWorker.getRegistration().then(registration => {
      const swStatus = document.getElementById('sw-status')
      if (swStatus) {
        swStatus.textContent = registration ? 'Actif' : 'Inactif'
        swStatus.className = registration ? 'text-green-600' : 'text-red-600'
      }
    })
  }

  // Vérifier le cache
  if ('caches' in window) {
    caches.keys().then(cacheNames => {
      const cacheStatus = document.getElementById('cache-status')
      if (cacheStatus) {
        cacheStatus.textContent = cacheNames.length > 0 ? `${cacheNames.length} cache(s)` : 'Aucun'
        cacheStatus.className = cacheNames.length > 0 ? 'text-green-600' : 'text-yellow-600'
      }
    })
  }

  // Afficher la dernière synchronisation
  const lastSync = localStorage.getItem('last-sync-time')
  const lastSyncEl = document.getElementById('last-sync')
  if (lastSyncEl && lastSync) {
    lastSyncEl.textContent = new Date(parseInt(lastSync)).toLocaleString()
  }
})
</script>
